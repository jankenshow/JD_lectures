library(knitr)
opts_chunk$set(echo = TRUE)
library(rgl)
knit_hooks$set(rgl = hook_webgl)
library(matlib)
K <- 200
a <-runif(1)
b <-runif(1)
c <-runif(1)
x <- matrix(rnorm(K),ncol=1)
y <- matrix(rnorm(K),ncol=1)
z <- -(a*x+b*y)/c
vec<-c(a,b,c)
p2<-cbind.data.frame(x,y,z)
fit <- lm(z ~ x + y, p2)
coefs <- coef(fit)
plot3d(p2)
vectors3d(vec,col="green",origin = c(0,0,0))
